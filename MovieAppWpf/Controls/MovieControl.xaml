<UserControl x:Class="MovieAppWpf.Controls.MovieControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:MovieAppWpf.ViewModels"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance viewModels:MovieControlViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="{Binding Movie.Title}" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" 
                   FontWeight="Bold" Margin="10 ,5 ,0, 0"/>
        <TextBlock Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding Movie.Category.Name}" 
                   Margin="10 ,5 ,0, 0" FontSize="16"/>
        
        <TextBlock Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Text="{Binding Movie.Rating}" 
                   Margin="0, 5, 10, 0"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Text="{Binding Movie.Year}" 
                   Margin="0, 0, 10, 5"/>
    </Grid>
</UserControl>
